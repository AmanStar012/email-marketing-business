{
  "version": 2,
  "functions": {
    "api/send-email.js": {
      "maxDuration": 30,
      "memory": 1024
    },
    "api/send-bulk-emails.js": {
      "maxDuration": 300,
      "memory": 1024
    },
    "api/test-connection.js": {
      "maxDuration": 15,
      "memory": 512
    }
  },
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/public/$1"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}